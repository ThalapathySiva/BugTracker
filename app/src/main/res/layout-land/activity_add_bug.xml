<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBug">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Bug"
        android:textSize="28sp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/tv"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_below="@+id/tv"
        android:layout_marginTop="35dp"
        android:id="@+id/assign"
        android:layout_marginLeft="10dp"
        android:text="Assigned to :"/>

    <Spinner
        android:layout_width="200dp"
        android:layout_below="@id/tv"
        android:layout_marginTop="20dp"
        android:spinnerMode="dropdown"
        android:layout_marginLeft="150sp"
        android:id="@+id/dropdown"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_separator_my_groups"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="135dp"
        android:background="#969494"
        android:layout_alignParentLeft="true" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilPostArticleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_separator_title"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-194dp"
        android:layout_alignParentLeft="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/titleEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:hint="Title :"
            android:inputType="textPersonName"
            android:minHeight="40dp"
            android:padding="6dp"
            android:textColor="#000"
            android:textColorHint="#228B22" />
    </android.support.design.widget.TextInputLayout>

    <View
        android:id="@+id/view_separator_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="194dp"
        android:background="#969494"
        android:layout_alignParentLeft="true" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view_separator_title"
        android:layout_alignParentLeft="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:hint="Description :"
            android:inputType="textPersonName"
            android:minHeight="40dp"
            android:padding="6dp"
            android:textColor="#000"
            android:textColorHint="#228B22" />
    </android.support.design.widget.TextInputLayout>

    <View
        android:id="@+id/view_separator_description"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/desc"
        android:background="#969494"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="300dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="70dp"
        android:background="@drawable/mybutton"
        android:text="Create"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:textStyle="bold" />
    </RelativeLayout>







</ScrollView>